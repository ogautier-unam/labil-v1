@page
@model IndexModel
@{
    ViewData["Title"] = "Tableau de bord";
}

<div class="row g-4">
    <div class="col-12">
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <strong>CrisisConnect</strong>&nbsp;&mdash; Plateforme de coordination de crise
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title">Offres</h5>
                <p class="card-text text-muted">Consultez les ressources disponibles proposées par les acteurs.</p>
                <a asp-page="/Propositions/Offres" class="btn btn-outline-primary btn-sm">Voir les offres</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-warning">
            <div class="card-body">
                <h5 class="card-title">Demandes</h5>
                <p class="card-text text-muted">Consultez les besoins exprimés par les citoyens et coordinateurs.</p>
                <a asp-page="/Propositions/Demandes" class="btn btn-outline-warning btn-sm">Voir les demandes</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-success">
            <div class="card-body">
                <h5 class="card-title">Transactions</h5>
                <p class="card-text text-muted">Suivez l'état des échanges entre offres et demandes.</p>
                <a asp-page="/Transactions/Index" class="btn btn-outline-success btn-sm">Voir les transactions</a>
            </div>
        </div>
    </div>
</div>
