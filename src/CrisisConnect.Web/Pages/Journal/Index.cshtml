@page
@model CrisisConnect.Web.Pages.Journal.JournalIndexModel
@{
    ViewData["Title"] = "Journal d'audit";
}

<h2 class="mb-4">Journal d'audit</h2>

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!Model.Entrees.Any())
{
    <div class="alert alert-info">Aucune entrée dans votre journal d'audit.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Date / heure</th>
                    <th>Opération</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entree in Model.Entrees.OrderByDescending(e => e.DateHeure))
                {
                    <tr>
                        <td class="text-nowrap text-muted small">@entree.DateHeure.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td><span class="badge bg-secondary">@entree.TypeOperation</span></td>
                        <td class="small">@(entree.Details ?? "—")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="text-muted small">@Model.Entrees.Count entrée(s) au total.</p>
}
