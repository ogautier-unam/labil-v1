@page
@model CrisisConnect.Web.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Créer un compte</h4>
            </div>
            <div class="card-body">
                @if (Model.ErrorMessage is not null)
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Prenom" class="form-label">Prénom</label>
                            <input asp-for="Prenom" class="form-control" autocomplete="given-name" />
                            <span asp-validation-for="Prenom" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Nom" class="form-label">Nom</label>
                            <input asp-for="Nom" class="form-control" autocomplete="family-name" />
                            <span asp-validation-for="Nom" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Adresse e-mail</label>
                        <input asp-for="Email" class="form-control" type="email" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MotDePasse" class="form-label">Mot de passe</label>
                        <input asp-for="MotDePasse" class="form-control" type="password" autocomplete="new-password" />
                        <span asp-validation-for="MotDePasse" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label">Rôle</label>
                        <select asp-for="Role" class="form-select">
                            <option value="">-- Choisir un rôle --</option>
                            <option value="Citoyen">Citoyen</option>
                            <option value="Benevole">Bénévole</option>
                            <option value="Coordinateur">Coordinateur</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telephone" class="form-label">Téléphone <span class="text-muted">(optionnel)</span></label>
                        <input asp-for="Telephone" class="form-control" type="tel" autocomplete="tel" />
                    </div>
                    <button type="submit" class="btn btn-danger w-100">S'inscrire</button>
                </form>

                <div class="mt-3 text-center small">
                    Déjà un compte ? <a asp-page="Login">Se connecter</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
