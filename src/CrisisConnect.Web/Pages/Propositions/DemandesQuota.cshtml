@page
@model CrisisConnect.Web.Pages.Propositions.DemandesQuotaModel
@{
    ViewData["Title"] = "Demandes quota";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Demandes quota</h2>
    <button class="btn btn-success btn-sm" type="button"
            data-bs-toggle="collapse" data-bs-target="#formCreer">
        + Nouvelle demande quota
    </button>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show">
        @ok <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @err <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@* Formulaire cr√©ation *@
<div class="collapse mb-4" id="formCreer">
    <div class="card">
        <div class="card-header fw-semibold">Cr√©er une demande quota</div>
        <div class="card-body">
            <form method="post" asp-page-handler="Creer">
                <div class="row g-3">
                    <div class="col-md-8">
                        <label class="form-label">Titre <span class="text-danger">*</span></label>
                        <input asp-for="Titre" class="form-control" required maxlength="200" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Date limite</label>
                        <input asp-for="DateLimit" class="form-control" type="date" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control" rows="3" required maxlength="2000"></textarea>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Capacit√© max <span class="text-danger">*</span></label>
                        <input asp-for="CapaciteMax" class="form-control" type="number" min="1" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Unit√© <span class="text-danger">*</span></label>
                        <input asp-for="UniteCapacite" class="form-control" required
                               placeholder="Ex. : kg, L, unit√©s‚Ä¶" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Adresse de d√©p√¥t</label>
                        <input asp-for="AdresseDepot" class="form-control"
                               placeholder="Adresse du point de collecte" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-success">Cr√©er</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@if (!Model.Demandes.Any())
{
    <div class="alert alert-info">Aucune demande quota en cours.</div>
}
else
{
    @foreach (var d in Model.Demandes)
    {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-semibold">@d.Titre</span>
                <span class="badge @(d.Statut == "Active" ? "bg-success" : "bg-secondary")">@d.Statut</span>
            </div>
            <div class="card-body">
                <p class="text-muted">@d.Description</p>
                <div class="row g-2 mb-3">
                    <div class="col-auto">
                        <span class="badge bg-primary">@d.CapaciteUtilisee / @d.CapaciteMax @d.UniteCapacite</span>
                    </div>
                    @if (d.AdresseDepot is not null)
                    {
                        <div class="col-auto text-muted small">üìç @d.AdresseDepot</div>
                    }
                    @if (d.DateLimit is not null)
                    {
                        <div class="col-auto text-muted small">üóì @d.DateLimit.Value.ToString("dd/MM/yyyy")</div>
                    }
                </div>

                @* Formulaire intention *@
                <div class="collapse mb-3" id="intention-@d.Id">
                    <div class="card card-body bg-light">
                        <form method="post" asp-page-handler="Soumettre" asp-route-demandeId="@d.Id">
                            <div class="row g-2">
                                <div class="col-md-3">
                                    <label class="form-label small">Quantit√©</label>
                                    <input asp-for="Quantite" class="form-control form-control-sm"
                                           type="number" min="1" required />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Unit√©</label>
                                    <input asp-for="Unite" class="form-control form-control-sm"
                                           required placeholder="@d.UniteCapacite" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small">Description</label>
                                    <input asp-for="DescriptionIntention" class="form-control form-control-sm"
                                           required maxlength="500" />
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-sm btn-success">Soumettre</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <button class="btn btn-outline-success btn-sm mb-3" type="button"
                        data-bs-toggle="collapse" data-bs-target="#intention-@d.Id">
                    Proposer une intention de don
                </button>

                @if (d.Intentions.Any())
                {
                    <h6 class="mt-2">Intentions (@d.Intentions.Count)</h6>
                    <div class="list-group list-group-flush">
                        @foreach (var i in d.Intentions)
                        {
                            <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-semibold">@i.Quantite @i.Unite</span>
                                    <span class="text-muted small ms-2">@i.Description</span>
                                    <span class="badge ms-2 @(i.Statut == "Acceptee" ? "bg-success" : i.Statut == "Confirmee" ? "bg-primary" : i.Statut == "Refusee" ? "bg-danger" : "bg-secondary")">
                                        @i.Statut
                                    </span>
                                </div>
                                @if (User.IsInRole("Coordinateur") || User.IsInRole("Responsable"))
                                {
                                    <div class="d-flex gap-1">
                                        @if (i.Statut == "EnAttente")
                                        {
                                            <form method="post" asp-page-handler="Accepter"
                                                  asp-route-demandeId="@d.Id" asp-route-intentionId="@i.Id">
                                                <button type="submit" class="btn btn-sm btn-success">‚úì</button>
                                            </form>
                                            <form method="post" asp-page-handler="Refuser"
                                                  asp-route-demandeId="@d.Id" asp-route-intentionId="@i.Id">
                                                <button type="submit" class="btn btn-sm btn-danger">‚úó</button>
                                            </form>
                                        }
                                    </div>
                                }
                                @if (i.Statut == "Acceptee")
                                {
                                    <form method="post" asp-page-handler="Confirmer"
                                          asp-route-demandeId="@d.Id" asp-route-intentionId="@i.Id">
                                        <button type="submit" class="btn btn-sm btn-primary">Confirmer</button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
}
