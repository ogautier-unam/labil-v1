@page
@model CrisisConnect.Web.Pages.Propositions.DemandesModel
@{
    ViewData["Title"] = "Demandes";
    var isAuth = User.Identity?.IsAuthenticated ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Demandes en cours</h1>
    @if (isAuth)
    {
        <button class="btn btn-primary btn-sm" type="button"
                data-bs-toggle="collapse" data-bs-target="#formPublier">
            + Publier une demande
        </button>
    }
</div>

@if (isAuth)
{
    <div class="collapse mb-4" id="formPublier">
        <div class="card card-body">
            <form method="post" asp-page-handler="Publier">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label for="Titre" class="form-label">Titre</label>
                        <input asp-for="Titre" id="Titre" class="form-control" required />
                    </div>
                    <div class="col-md-7">
                        <label for="Description" class="form-label">Description</label>
                        <input asp-for="Description" id="Description" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label for="Urgence" class="form-label">Niveau d'urgence</label>
                        <select asp-for="Urgence" id="Urgence" class="form-select">
                            <option value="Faible">Faible</option>
                            <option value="Moyen" selected>Moyen</option>
                            <option value="Eleve">Élevé</option>
                            <option value="Critique">Critique</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="RegionSeverite" class="form-label">Région / Zone <span class="text-muted">(optionnel)</span></label>
                        <input asp-for="RegionSeverite" id="RegionSeverite" class="form-control" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-success btn-sm w-100">Publier</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (!Model.Demandes.Any())
{
    <div class="alert alert-info">Aucune demande pour le moment.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Titre</th>
                    <th>Urgence</th>
                    <th>Région</th>
                    <th>Statut</th>
                    <th>Créé le</th>
                    @if (User.IsInRole("Coordinateur") || User.IsInRole("Responsable")) { <th>Actions</th> }
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Demandes)
                {
                    var urgenceCss = d.Urgence switch
                    {
                        "Critique" => "bg-danger",
                        "Eleve"    => "bg-warning text-dark",
                        "Moyen"    => "bg-info text-dark",
                        _          => "bg-secondary"
                    };
                    <tr>
                        <td>
                            <div class="fw-semibold">@d.Titre</div>
                            <div class="text-muted small">@d.Description</div>
                        </td>
                        <td><span class="badge @urgenceCss">@d.Urgence</span></td>
                        <td>@(d.RegionSeverite ?? "—")</td>
                        <td><span class="badge bg-secondary">@d.Statut</span></td>
                        <td>@d.CreeLe.ToString("dd/MM/yyyy")</td>
                        @if (User.IsInRole("Coordinateur") || User.IsInRole("Responsable"))
                        {
                            <td>
                                <div class="d-flex gap-1 flex-wrap">
                                    @if (d.Statut is "Active" or "EnAttenteRelance")
                                    {
                                        <form method="post" asp-page-handler="Archiver">
                                            <input type="hidden" name="demandeId" value="@d.Id" />
                                            <button class="btn btn-outline-warning btn-sm"
                                                    onclick="return confirm('Archiver cette demande ?')">Archiver</button>
                                        </form>
                                        <form method="post" asp-page-handler="Clore">
                                            <input type="hidden" name="demandeId" value="@d.Id" />
                                            <button class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Clôturer cette demande ?')">Clôturer</button>
                                        </form>
                                    }
                                    @if (d.Statut == "Active")
                                    {
                                        <form method="post" asp-page-handler="Relancer">
                                            <input type="hidden" name="demandeId" value="@d.Id" />
                                            <button class="btn btn-outline-secondary btn-sm"
                                                    onclick="return confirm('Marquer en attente de relance ?')">Relancer</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
