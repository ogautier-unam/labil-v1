@page "{id:guid}"
@model CrisisConnect.Web.Pages.Propositions.OffreEditModel
@{
    ViewData["Title"] = "Modifier l'offre";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Modifier l'offre</h2>
    <a asp-page="/Propositions/Offres" class="btn btn-outline-secondary btn-sm">‚Üê Retour</a>
</div>

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else
{
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Titre" class="form-label">Titre <span class="text-danger">*</span></label>
                    <input asp-for="Titre" class="form-control" required maxlength="200" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                    <textarea asp-for="Description" class="form-control" rows="5" required maxlength="2000"></textarea>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="LivraisonIncluse" class="form-check-input" type="checkbox" />
                    <label asp-for="LivraisonIncluse" class="form-check-label">Livraison incluse</label>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a asp-page="/Propositions/Offres" class="btn btn-outline-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
}
