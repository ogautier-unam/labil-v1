@page
@model CrisisConnect.Web.Pages.Propositions.PropositionsIndexModel
@{
    ViewData["Title"] = "Toutes les propositions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Propositions</h1>
    <div>
        <a asp-page="Offres" class="btn btn-outline-primary btn-sm me-2">Offres</a>
        <a asp-page="Demandes" class="btn btn-outline-warning btn-sm">Demandes</a>
    </div>
</div>

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (!Model.Propositions.Any())
{
    <div class="alert alert-info">Aucune proposition pour le moment.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th>Créé le</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Propositions)
                {
                    <tr>
                        <td>@p.Titre</td>
                        <td class="text-muted small">@p.Description</td>
                        <td><span class="badge bg-secondary">@p.Statut</span></td>
                        <td>@p.CreeLe.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
