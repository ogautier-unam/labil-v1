@page
@model CrisisConnect.Web.Pages.Propositions.OffresModel
@{
    ViewData["Title"] = "Offres";
    var isAuth = User.Identity?.IsAuthenticated ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Offres disponibles</h1>
    @if (isAuth)
    {
        <button class="btn btn-primary btn-sm" type="button"
                data-bs-toggle="collapse" data-bs-target="#formPublier">
            + Publier une offre
        </button>
    }
</div>

@* Formulaire de création (accordéon) *@
@if (isAuth)
{
    <div class="collapse mb-4" id="formPublier">
        <div class="card card-body">
            <form method="post" asp-page-handler="Publier">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="Titre" class="form-label">Titre</label>
                        <input asp-for="Titre" id="Titre" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label for="Description" class="form-label">Description</label>
                        <input asp-for="Description" id="Description" class="form-control" required />
                    </div>
                    <div class="col-auto d-flex align-items-center gap-2">
                        <input asp-for="LivraisonIncluse" class="form-check-input" type="checkbox" id="livraison" />
                        <label class="form-check-label" for="livraison">Livraison incluse</label>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-success btn-sm">Publier</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (!Model.Offres.Any())
{
    <div class="alert alert-info">Aucune offre pour le moment.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        @foreach (var offre in Model.Offres)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@offre.Titre</h5>
                        <p class="card-text text-muted small">@offre.Description</p>
                        @if (offre.LivraisonIncluse)
                        {
                            <span class="badge bg-info text-dark mb-2">Livraison incluse</span>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary">@offre.Statut</span>
                        <div class="d-flex gap-2 align-items-center">
                            <small class="text-muted">@offre.CreeLe.ToString("dd/MM/yyyy")</small>
                            @if (isAuth && offre.Statut == "Active")
                            {
                                <form method="post" asp-page-handler="AjouterAuPanier">
                                    <input type="hidden" name="offreId" value="@offre.Id" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                        + Panier
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
