@page
@model CrisisConnect.Web.Pages.Propositions.DemandesSurCatalogueModel
@{
    ViewData["Title"] = "Demandes sur catalogue";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Demandes sur catalogue</h2>
    <button class="btn btn-success btn-sm" type="button"
            data-bs-toggle="collapse" data-bs-target="#formCreer">
        + Nouvelle demande sur catalogue
    </button>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show">
        @ok <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @err <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@* Formulaire cr√©ation *@
<div class="collapse mb-4" id="formCreer">
    <div class="card">
        <div class="card-header fw-semibold">Cr√©er une demande sur catalogue</div>
        <div class="card-body">
            <form method="post" asp-page-handler="Creer">
                <div class="row g-3">
                    <div class="col-md-8">
                        <label for="Titre" class="form-label">Titre <span class="text-danger">*</span></label>
                        <input asp-for="Titre" id="Titre" class="form-control" required maxlength="200" />
                    </div>
                    <div class="col-md-4">
                        <label for="UrlCatalogue" class="form-label">URL catalogue <span class="text-danger">*</span></label>
                        <input asp-for="UrlCatalogue" id="UrlCatalogue" class="form-control" required
                               placeholder="https://catalogue.example.com" />
                    </div>
                    <div class="col-12">
                        <label for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" id="Description" class="form-control" rows="3" required maxlength="2000"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-success">Cr√©er</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@if (!Model.Demandes.Any())
{
    <div class="alert alert-info">Aucune demande sur catalogue en cours.</div>
}
else
{
    @foreach (var d in Model.Demandes)
    {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-semibold">@d.Titre</span>
                <span class="badge @(d.Statut == "Active" ? "bg-success" : "bg-secondary")">@d.Statut</span>
            </div>
            <div class="card-body">
                <p class="text-muted">@d.Description</p>
                <div class="mb-2">
                    <span class="text-muted small">üîó <a href="@d.UrlCatalogue" target="_blank" rel="noopener">@d.UrlCatalogue</a></span>
                </div>

                @* Liste des lignes *@
                @if (d.Lignes.Any())
                {
                    <h6 class="mt-3">Lignes du catalogue (@d.Lignes.Count)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered align-middle mb-3">
                            <thead class="table-light">
                                <tr>
                                    <th>R√©f√©rence</th>
                                    <th>D√©signation</th>
                                    <th class="text-end">Qt√©</th>
                                    <th class="text-end">Prix unit.</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var l in d.Lignes)
                                {
                                    <tr>
                                        <td>@l.Reference</td>
                                        <td>
                                            @if (l.UrlProduit is not null)
                                            {
                                                <a href="@l.UrlProduit" target="_blank" rel="noopener">@l.Designation</a>
                                            }
                                            else
                                            {
                                                @l.Designation
                                            }
                                        </td>
                                        <td class="text-end">@l.Quantite</td>
                                        <td class="text-end">@l.PrixUnitaire.ToString("F2") ‚Ç¨</td>
                                        <td>
                                            <span class="badge @(l.Statut == "Fournie" ? "bg-success" : l.Statut == "PartiellementFournie" ? "bg-warning text-dark" : "bg-secondary")">
                                                @l.Statut
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                @* Formulaire ajout de ligne *@
                <div class="collapse mb-3" id="ligne-@d.Id">
                    <div class="card card-body bg-light">
                        <form method="post" asp-page-handler="AjouterLigne" asp-route-demandeId="@d.Id">
                            <div class="row g-2">
                                <div class="col-md-3">
                                    <label for="Reference-@d.Id" class="form-label small">R√©f√©rence <span class="text-danger">*</span></label>
                                    <input asp-for="Reference" id="Reference-@d.Id" class="form-control form-control-sm" required maxlength="100" />
                                </div>
                                <div class="col-md-4">
                                    <label for="Designation-@d.Id" class="form-label small">D√©signation <span class="text-danger">*</span></label>
                                    <input asp-for="Designation" id="Designation-@d.Id" class="form-control form-control-sm" required maxlength="200" />
                                </div>
                                <div class="col-md-2">
                                    <label for="Quantite-@d.Id" class="form-label small">Quantit√© <span class="text-danger">*</span></label>
                                    <input asp-for="Quantite" id="Quantite-@d.Id" class="form-control form-control-sm" type="number" min="1" required />
                                </div>
                                <div class="col-md-3">
                                    <label for="PrixUnitaire-@d.Id" class="form-label small">Prix unit. (‚Ç¨) <span class="text-danger">*</span></label>
                                    <input asp-for="PrixUnitaire" id="PrixUnitaire-@d.Id" class="form-control form-control-sm" type="number" min="0" step="0.01" required />
                                </div>
                                <div class="col-12">
                                    <label for="UrlProduit-@d.Id" class="form-label small">URL produit</label>
                                    <input asp-for="UrlProduit" id="UrlProduit-@d.Id" class="form-control form-control-sm" placeholder="https://..." />
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-sm btn-success">Ajouter la ligne</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <button class="btn btn-outline-success btn-sm" type="button"
                        data-bs-toggle="collapse" data-bs-target="#ligne-@d.Id">
                    + Ajouter une ligne
                </button>
            </div>
        </div>
    }
}
