<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrisisConnect</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrisisConnect.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-danger">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    CrisisConnect
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Basculer la navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Tableau de bord</a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle btn btn-link"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                Propositions
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Propositions/Index">Toutes les propositions</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/Offres">Offres</a></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/Demandes">Demandes</a></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/DemandesQuota">Demandes quota</a></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/DemandesSurCatalogue">Sur catalogue</a></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/DemandesRepartitionGeo">Répartition géo</a></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/AvecValidation">Avec validation</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-page="/Propositions/Medias">Médias</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Transactions/Index">Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/ConfigCatastrophe/Index">Config. crise</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Profil/Index">Mon profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Paniers/Index">Mon panier</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Notifications/Index">Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Journal/Index">Journal</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Suggestions/Index">Suggestions</a>
                            </li>
                            @if (User.IsInRole("Coordinateur") || User.IsInRole("Responsable"))
                            {
                                <li class="nav-item dropdown">
                                    <button class="nav-link dropdown-toggle btn btn-link"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                        Administration
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Admin/Roles">Rôles</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Mandats">Mandats</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Taxonomie/Index">Taxonomie</a></li>
                                        <li><a class="dropdown-item" asp-page="/Entites/Index">Organisations</a></li>
                                        <li><a class="dropdown-item" asp-page="/MethodesIdentification/Index">Méthodes d'identification</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white-50 small">@User.Identity.Name (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)</span>
                            </li>
                            <li class="nav-item">
                                <form asp-page="/Auth/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Déconnexion</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Register">S'inscrire</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Login">Connexion</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-light py-3 mt-auto">
        <div class="container text-muted small">
            &copy; 2026 CrisisConnect &mdash; Plateforme de gestion de crise
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
