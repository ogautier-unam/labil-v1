@page
@model CrisisConnect.Web.Pages.Suggestions.SuggestionsIndexModel
@{
    ViewData["Title"] = "Suggestions d'appariement";
}

<h2 class="mb-4">Suggestions d'appariement</h2>

@if (TempData["Success"] is string successMsg)
{
    <div class="alert alert-success alert-dismissible fade show">
        @successMsg <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string errorMsg)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @errorMsg <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

@if (!Model.Suggestions.Any())
{
    <div class="alert alert-info">Aucune suggestion en attente d'acquittement.</div>
}
else
{
    <p class="text-muted">@Model.Suggestions.Count suggestion(s) en attente — générées automatiquement par le système.</p>
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var s in Model.Suggestions.OrderByDescending(s => s.ScoreCorrespondance))
        {
            <div class="col">
                <div class="card h-100 @(s.EstAcknowledged ? "border-secondary opacity-75" : "border-primary")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-primary fs-6">@((s.ScoreCorrespondance * 100).ToString("0"))%</span>
                            @if (s.EstAcknowledged)
                            {
                                <span class="badge bg-secondary">Acquitté</span>
                            }
                        </div>
                        <p class="card-text">@s.Raisonnement</p>
                        <div class="text-muted small mb-2">
                            <div>Offre : <code>@s.OffreId</code></div>
                            <div>Demande : <code>@s.DemandeId</code></div>
                            <div>Générée le @s.DateGeneration.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                    @if (!s.EstAcknowledged)
                    {
                        <div class="card-footer">
                            <form method="post" asp-page-handler="Acknowledge">
                                <input type="hidden" name="suggestionId" value="@s.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary w-100">
                                    Acquitter
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
