@page
@model CrisisConnect.Web.Pages.Transactions.TransactionsIndexModel
@{
    ViewData["Title"] = "Transactions";
    var isAuth = User.Identity?.IsAuthenticated ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Transactions</h1>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (!Model.Transactions.Any())
{
    <div class="alert alert-info">Aucune transaction pour le moment.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Identifiant</th>
                    <th>Proposition</th>
                    <th>Statut</th>
                    <th>Date</th>
                    @if (isAuth) { <th>Actions</th> }
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Transactions)
                {
                    var statutCss = t.Statut switch
                    {
                        "Confirmee" => "bg-success",
                        "Annulee"   => "bg-danger",
                        _           => "bg-warning text-dark"
                    };
                    <tr>
                        <td class="font-monospace small">@t.Id.ToString()[..8]…</td>
                        <td class="font-monospace small">@t.PropositionId.ToString()[..8]…</td>
                        <td><span class="badge @statutCss">@t.Statut</span></td>
                        <td>@t.DateCreation.ToString("dd/MM/yyyy HH:mm")</td>
                        @if (isAuth)
                        {
                            <td>
                                @if (t.Statut == "EnCours")
                                {
                                    <div class="d-flex gap-1">
                                        <form method="post" asp-page-handler="Confirmer">
                                            <input type="hidden" name="transactionId" value="@t.Id" />
                                            <button class="btn btn-success btn-sm"
                                                    onclick="return confirm('Confirmer cette transaction ?')">
                                                ✓ Confirmer
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="Annuler">
                                            <input type="hidden" name="transactionId" value="@t.Id" />
                                            <button class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Annuler cette transaction ?')">
                                                ✕ Annuler
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">—</span>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
