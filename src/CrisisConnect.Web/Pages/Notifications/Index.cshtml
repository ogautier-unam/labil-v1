@page
@model CrisisConnect.Web.Pages.Notifications.NotificationsIndexModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Mes notifications</h1>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (!Model.Notifications.Any())
{
    <div class="alert alert-info">Aucune notification pour le moment.</div>
}
else
{
    <div class="list-group">
        @foreach (var n in Model.Notifications)
        {
            var itemCss = n.EstLue ? "list-group-item list-group-item-action" : "list-group-item list-group-item-action fw-semibold bg-light";
            <div class="@itemCss d-flex justify-content-between align-items-start gap-2 py-3">
                <div>
                    <span class="badge bg-secondary me-1">@n.Type</span>
                    <span>@n.Contenu</span>
                    <div class="text-muted small mt-1">@n.DateCreation.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                @if (!n.EstLue)
                {
                    <form method="post" asp-page-handler="MarquerLue" class="flex-shrink-0">
                        <input type="hidden" name="notificationId" value="@n.Id" />
                        <button class="btn btn-outline-secondary btn-sm">Marquer lue</button>
                    </form>
                }
                else
                {
                    <span class="badge bg-success align-self-center">Lue</span>
                }
            </div>
        }
    </div>
}
