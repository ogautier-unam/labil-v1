@page
@model CrisisConnect.Web.Pages.ConfigCatastrophe.ConfigCatastropheIndexModel
@{
    ViewData["Title"] = "Configuration de crise";
    var isResponsable = User.IsInRole("Responsable");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Configuration de crise</h1>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (Model.Config is { } cfg)
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>@cfg.Nom</strong>
            @if (cfg.EstActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </div>
        <div class="card-body">
            <p class="card-text">@cfg.Description</p>
            <dl class="row mb-0">
                <dt class="col-sm-4">Zone géographique</dt>
                <dd class="col-sm-8">@cfg.ZoneGeographique</dd>
                <dt class="col-sm-4">État référent</dt>
                <dd class="col-sm-8">@cfg.EtatReferent</dd>
                <dt class="col-sm-4">Délai archivage</dt>
                <dd class="col-sm-8">@cfg.DelaiArchivageJours j.</dd>
                <dt class="col-sm-4">Rappel avant archivage</dt>
                <dd class="col-sm-8">@cfg.DelaiRappelAvantArchivage j.</dd>
                <dt class="col-sm-4">Langues actives</dt>
                <dd class="col-sm-8">@cfg.LanguesActives</dd>
                <dt class="col-sm-4">Débuté le</dt>
                <dd class="col-sm-8">@cfg.DateDebut.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Aucune configuration de crise active pour le moment.</div>
}

@if (isResponsable && Model.Config is { } cfgEdit)
{
    <div class="card mb-3">
        <div class="card-header">
            <button class="btn btn-link p-0 text-decoration-none fw-semibold"
                    type="button" data-bs-toggle="collapse" data-bs-target="#formModifier">
                ✏ Modifier la configuration active
            </button>
        </div>
        <div id="formModifier" class="collapse">
            <div class="card-body">
                <form method="post" asp-page-handler="Modifier">
                    <input type="hidden" name="ConfigId" value="@cfgEdit.Id" />
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label" for="modDelaiArchive">Délai archivage (jours)</label>
                            <input id="modDelaiArchive" type="number" class="form-control"
                                   name="DelaiArchivageJours" value="@cfgEdit.DelaiArchivageJours" min="1" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="modDelaiRappel">Rappel avant archivage (jours)</label>
                            <input id="modDelaiRappel" type="number" class="form-control"
                                   name="DelaiRappelAvantArchivage" value="@cfgEdit.DelaiRappelAvantArchivage" min="1" />
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="EstActive" value="true"
                               id="modEstActive" @(cfgEdit.EstActive ? "checked" : "") />
                        <label class="form-check-label" for="modEstActive">Configuration active</label>
                    </div>
                    <button type="submit" class="btn btn-warning">Mettre à jour</button>
                </form>
            </div>
        </div>
    </div>
}

@if (isResponsable)
{
    <div class="card">
        <div class="card-header">
            <button class="btn btn-link p-0 text-decoration-none fw-semibold"
                    type="button" data-bs-toggle="collapse" data-bs-target="#formConfig">
                + Nouvelle configuration
            </button>
        </div>
        <div id="formConfig" class="collapse">
            <div class="card-body">
                <form method="post" asp-page-handler="Créer">
                    <div class="mb-3">
                        <label class="form-label" for="nom">Nom</label>
                        <input id="nom" class="form-control" asp-for="Nom" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="desc">Description</label>
                        <textarea id="desc" class="form-control" asp-for="Description" rows="2" required></textarea>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label" for="zone">Zone géographique</label>
                            <input id="zone" class="form-control" asp-for="ZoneGeographique" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="etat">État référent</label>
                            <input id="etat" class="form-control" asp-for="EtatReferent" required />
                        </div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label" for="delaiArchive">Délai archivage (jours)</label>
                            <input id="delaiArchive" type="number" class="form-control" asp-for="DelaiArchivageJours" min="1" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="delaiRappel">Rappel avant archivage (jours)</label>
                            <input id="delaiRappel" type="number" class="form-control" asp-for="DelaiRappelAvantArchivage" min="1" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger">Créer la configuration</button>
                </form>
            </div>
        </div>
    </div>
}
